{
  "name": "@studiocosmicnorth/dungeon-desktop",
  "private": true,
  "version": "1.0.2",
  "description": "Professional D&D map creation and management tool by Studio Cosmic North",
  "author": "Studio Cosmic North",
  "license": "Proprietary",
  "homepage": "https://studiocosmicnorth.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/studiocosmicnorth/dungeon-desktop"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:build:debug": "tauri build --debug",
    "build:all": "npm run build && npm run tauri:build",
    "build:debug": "npm run build && npm run tauri:build:debug",
    "build:quick": "npm run build && npm run tauri:build:debug",
    "clean": "rimraf dist build src-tauri/target",
    "build:clean": "npm run clean && npm run build:all",
    "release": "npm run clean && npm run lint && npm run build:all"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.7.0",
    "dungeon-desktop": "file:",
    "pixi.js": "^8.12.0",
    "react": "^19.1.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^6.26.2",
    "simplex-noise": "^4.0.3",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@tauri-apps/cli": "^2.7.1",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.7.0",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "rimraf": "^6.0.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.0",
    "vite": "^7.1.0"
  }
}
