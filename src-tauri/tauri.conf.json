{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Dungeon Desktop",
  "version": "1.0.2",
  "identifier": "com.studiocosmicnorth.dungeondesktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npx vite build"
  },
  "app": {
    "windows": [
      {
        "title": "Dungeon Desktop - Studio Cosmic North",
        "width": 1920,
        "height": 1080,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {},
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Studio Cosmic North",
    "copyright": "Copyright Â© 2025 Studio Cosmic North. All rights reserved.",
    "category": "Game",
    "shortDescription": "Professional D&D map creation and management tool",
    "longDescription": "Dungeon Desktop is a comprehensive tool for creating, editing, and managing D&D maps. Features include tile-based map building, asset management, character tokens, measurement tools, and export capabilities.",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com",
      "tsp": false,
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "installMode": "perMachine",
        "languages": ["English"]
      }
    }
  }
}
