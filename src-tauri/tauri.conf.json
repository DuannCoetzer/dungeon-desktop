{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Dungeon Desktop",
  "version": "1.0.0",
  "identifier": "com.studiocosmicnorth.dungeondesktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npx vite build"
  },
  "app": {
    "windows": [
      {
        "title": "Dungeon Desktop - Studio Cosmic North",
        "width": 1920,
        "height": 1080,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {},
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
